# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mistcharge
DB_USER=postgres
DB_PASSWORD=your_password

# AWS IoT Core Configuration
AWS_IOT_ENDPOINT=your-iot-endpoint.iot.region.amazonaws.com
AWS_IOT_CLIENT_ID=mist-charge-backend
AWS_IOT_USERNAME=your_username
AWS_IOT_PASSWORD=your_password

# AWS IoT Core Certificates (for production)
# These should be the contents of your certificate files
AWS_IOT_CA_CERT=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----
AWS_IOT_CLIENT_CERT=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----
AWS_IOT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----

# Server Configuration
PORT=3001
